<li class='card-item'>
  <img
    class='card-image'
    src='https://image.tmdb.org/t/p/w500{{poster_path}}'
    alt='{{title}}'
    data-src='https://image.tmdb.org/t/p/original{{poster_path}}'
    data-id={{id}}
  />
  <h2 class='movie-title'>
    {{title}}
  </h2>
  <p class='genre'>
    <span class='genre-title'>
      {{#each genres}}
        {{name}},
      {{/each}}
    </span>
    <span>
      |
      {{release_date}}
    </span>
    <span class='movie-vote'>
      {{vote_average}}
    </span>
  </p>
</li>